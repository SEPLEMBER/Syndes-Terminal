<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mg_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="20dp">

    <!-- Основное содержимое (подложка) -->
    <LinearLayout
        android:id="@+id/mg_main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Инструкция (хардкод) -->
        <TextView
            android:id="@+id/mg_instruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Console\n2. Status\n3. Wipe data\n4. Uninstall ALL Syndes\n5. ADB\n6. Exit\n"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:fontFamily="monospace"
            android:textColor="#39FFCC"
            android:textStyle="bold"
            android:paddingBottom="20dp" />

        <!-- Визуальный контейнер (чтобы центральный ввод выглядел как neon field) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginBottom="18dp"
            android:background="#000000"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">

            <EditText
                android:id="@+id/mg_input"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:hint="Enter number"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="#00FFD5"
                android:textColorHint="#204040"
                android:background="@android:color/transparent"
                android:textSize="18sp"
                android:fontFamily="monospace" />

            <Button
                android:id="@+id/mg_go_button"
                android:layout_width="90dp"
                android:layout_height="56dp"
                android:layout_marginStart="10dp"
                android:text="GO"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="#041217"
                android:backgroundTint="#FF00B8"
                android:fontFamily="monospace"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Подсказка/футер в стиле neon -->
        <TextView
            android:id="@+id/mg_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mindbreaker EFI. Syndes Project. 2026."
            android:textColor="#FF4DFF"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:paddingTop="8dp" />
    </LinearLayout>

    <!-- ================= Overlay LiveBoot (по умолчанию виден) ================= -->
    <FrameLayout
        android:id="@+id/mg_boot_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:visibility="visible"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <!-- Вертикальный контейнер: header сверху + ScrollView ниже -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- FIXED HEADER (того же зелёного цвета) -->
            <TextView
                android:id="@+id/mg_boot_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:fontFamily="monospace"
                android:textSize="13sp"
                android:textColor="#0099CC"
                android:textStyle="bold"
                android:paddingBottom="8dp"
                android:text="; =========================================\n; Mindbreaker UEFI Bootloader v9.07 &quot;Neon Fracture&quot;\n; E.F.P. organization.\n; (c) 2026 Kernel Hall / Open Source Foundation Project\n; =========================================\nsection .textglobal _load" />

            <!-- ScrollView занимает оставшееся место (не перекрывает header) -->
            <ScrollView
                android:id="@+id/mg_boot_scroll"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="18dp"
                android:overScrollMode="ifContentScrolls">

                <TextView
                    android:id="@+id/mg_boot_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="13sp"
                    android:fontFamily="monospace"
                    android:textColor="#0099CC"
                    android:lineSpacingExtra="4dp" />
            </ScrollView>
        </LinearLayout>

        <!-- Мигающий курсор: отдельный потомок FrameLayout, рисуется сверху -->
        <TextView
            android:id="@+id/mg_boot_cursor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:textSize="8sp"
            android:fontFamily="monospace"
            android:textColor="#0099CC"
            android:layout_margin="18dp"
            android:layout_gravity="bottom|start" />

    </FrameLayout>
</FrameLayout>
