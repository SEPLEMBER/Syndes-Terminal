<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/formulh_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:paddingTop="12dp"
    android:paddingStart="12dp"
    android:paddingEnd="12dp">

    <!-- Верхняя панель поиска (закреплённая) -->
    <LinearLayout
        android:id="@+id/formulh_top"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:background="#05080A">

        <EditText
            android:id="@+id/formulh_search"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="Поиск ( нечувствительно к регистру/пробелам )"
            android:hintTextColor="#263326"
            android:textColor="#00FF66"
            android:textSize="16sp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:background="@android:color/transparent"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:fontFamily="monospace" />

        <Button
            android:id="@+id/formulh_search_btn"
            android:layout_width="86dp"
            android:layout_height="48dp"
            android:text="FIND"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:backgroundTint="#00FF66"
            android:textColor="#071217"
            android:fontFamily="monospace" />
    </LinearLayout>

    <!-- Разделитель -->
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#000000" />

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/formulh_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="ifContentScrolls">

        <LinearLayout
            android:id="@+id/formulh_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="28dp"
            android:paddingTop="8dp" />

    </ScrollView>

</LinearLayout>
